{
  "parser"  : "babel-eslint",
  "extends" : [
    "standard"
  ],
  "plugins" : [
    "flow-vars",
    "babel"
  ],
  "env"     : {
    "browser" : true
  },
  "rules": {
    "semi" : [2, "never"],
    "max-len": [2, 120, 2],
    "flow-vars/define-flow-type": 1,
    "flow-vars/use-flow-type": 1,
    "arrow-parens": 0,
    "babel/arrow-parens": 1,
    "camelcase": 0
  }
}
